[colors]
background = #0f101a
background-wm = #0f101a
background-alt = #0f101a
foreground = #d8dee9
foreground-alt =  #555555
primary = #268bd2
alert = #640130

[settings]
format-foreground =
format-underline = ${colors.primary}
format-background = ${colors.background-alt}
format-padding = 1
format-overline =
format-margin = 0
format-offset =
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
monitor = ${env:MONITOR:DisplayPort-0}
monitor-fallback =
monitor-strict = false
monitor-exact = true
override-redirect = false
wm-restack = bspwm
enable-ipc = true
fixed-center = false bottom = false
separator =
width = 100%
height = 18
offset-x = 0
offset-y = 0
radius = 0.0
underline-size = 2
overline-size = 0

background = ${colors.background}
foreground = ${colors.foreground}

module-margin-left = 0
module-margin-right = 1

font-0 = RobotoMono Nerd Font:weight=bold:pixelsize=8;
font-1 = RobotoMono Nerd Font:weight=bold:pixelsize=8;
font-2 = NotoColorEmoji:fontformat=truetype:scale=12:antialias=false;
font-3 = IPAGothic:fontformat=truetype:pixelsize=12:antialias=false;

modules-left = arch-logo bspwm xwindow
; modules-right = spotify updates polytimer cpu-usage cpu-temperature polymemory pulseaudio date time
modules-right = spotify spotify-prev spotify-play-pause spotify-next updates polytimer cpu-usage cpu-temperature polymemory pulseaudio date time
; modules-right = updates polytimer cpu-usage cpu-temperature polymemory pulseaudio polyweather date time

tray-position = right
tray-padding = 2
tray-background = ${colors.background-alt}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1
tray-maxsize = 15

cursor-click = pointer
cursor-scroll = default

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

format-underline =
format-background =
format-padding =

[module/arch-logo]
type = custom/text
content = 

click-left = rofi -show drun
click-right = ~/scripts/rofi/rofi-powermenu

[module/bspwm]
type = internal/bspwm
enable-scroll = false

label-focused = %name%
label-focused-background = ${colors.background-wm}
label-focused-underline = ${colors.primary}
label-focused-padding = 1
label-occupied = %name%
label-occupied-padding = 1
label-occupied-underline = ${colors.background}
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1
label-empty-underline = ${colors.background}

format-underline =
format-background =
format-padding =

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
; label-separator = |
label-separator = 

[module/spotify]
type = custom/script
tail = true
format-prefix = "阮 "
format = <label>
exec = ~/scripts/polybar/scroll_spotify_status

[module/spotify-prev]
type = custom/script
exec = echo "玲"
format = <label>
click-left = playerctl previous  spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo "契"
initial = 1
click-left = playerctl play-pause spotify

[module/spotify-next]
type = custom/script
exec = echo "怜"
format = <label>
click-left = playerctl next spotify

[module/updates]
type = custom/script
exec = ~/scripts/polybar/polyupdates
interval = 600
format-prefix = "📦 "
# click-left = alacritty -e sudo pacman -Syu
# click-right = alacritty -e yay -Syua
click-left = alacritty -e paru
click-right = alacritty -e paru -Sua

[module/cpu-usage]
type = custom/script
exec = ~/scripts/polybar/polycpu
label = "%output%"
click-left = alacritty -e btm
interval = 3
format-prefix = "💻 "

[module/cpu-temperature]
type = custom/script
exec = ~/scripts/polybar/polytempamd
label = "%output%"
format-prefix="🔥 "
interval = 5

[module/polymemory]
type = custom/script
exec = ~/scripts/polybar/polymemory
label = "%output%"
click-left = alacritty -e btm
interval = 3
format-prefix = "🧠 "

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = <ramp-volume> <label-volume>
label-muted = 🔇 muted
ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊

click-right = pavucontrol

