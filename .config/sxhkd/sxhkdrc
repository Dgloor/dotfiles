#
#====================== Applications  Launchers
#

# Open terminal
super + Return
	alacritty
# Program launcher
super + shift + {Return,o}
	rofi -show {drun,run}

# Window Switcher
super + o 
	rofi -show window

# Rofi emoji
super + period
	rofi -show emoji

# File Explorer
super + e 
	spacefm
	# thunar

# Browser
super + w
	google-chrome-stable

# Music Player
XF86HomePage
	spotify

# Clipboard
super + shift + i
	copyq toggle

# Redshift 
super + {_,shift} + r 
	redshift {-O 4500,-x}

# Screeshots
super + shift + s 
	flameshot gui

# Toggle Compositor
super + p
	killall -q picom || picom 

# Pomodoro
super + shift + p 
	gnome-pomodoro

##Powermenu
#super + shift + p 
#	~/scripts/rofi/rofi-powermenu

# Mail Client
XF86Mail
	mailspring

# Toggle Screenkey
XF86Tools
	killall -q screenkey || screenkey

# Quick screenshot
Print
 flameshot full -p ~/Images/screenshots


#
# ============================ bspwm hotkeys
#

# Quit bspwm
super + ctrl + t 
	~/scripts/rofi/rofi-prompt "Quit Xsession" "bspc quit"

# Close window
super + q
	~/scripts/bspwm/bspwm-crystal --close
	# bspc node -c

# Toggle tiled and monocle layout
super + m
	bspc desktop -l next

# Balance Nodes
super + shift + m 
	bspc node @/ -B

# Toggle fullscreen
super + shift + f
  ~/scripts/bspwm/bspwm-crystal --fullscreen

# Toggle floating mode
super + f
  bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# Flip the tree from the current nodes parent
super + ctrl + {Left,Down,Up,Right}
  bspc node @parent -F {vertical, horizontal, horizontal, vertical}

# Toggle Mater Layout | bsp-layout
super + ctrl + m
	bsp-layout cycle --layouts tall,tiled

# Send the newest marked node to the newest preselected node
super + shift + y
	bspc node newest.marked.local -n newest.!automatic.local

# Swap nodes the tree from the current nodes parent
super + alt + {Up,Down}
  bspc node @parent -C {forward, backward}

# Rotate the tree from the current nodes parent
super + alt + {Right,Left}
	bspc node @parent --rotate {90,270}

# Toggle window gaps
super + ctrl + g
	~/scripts/bspwm/bspwm-gaps

# # swap the current node and the biggest window
# super + g
# 	bspc node -s biggest.window

#
# ============================= state/flags
#

# Set the window state
super + {t,shift+t}
	bspc node -t {tiled, pseudo_tiled}

# Set the node flags
super + {y,s}
	bspc node -g {marked, sticky}

# super + ctrl + {m,x,y,z}
# 	bspc node -g {marked,locked,sticky,private}


#
#============================== focus/swap
#

# Focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# Swap the node in the given direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# Focus the next/previous window in the current desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# Focus desktop
super + {1-9}
	bspc desktop -f {1-9}

# Focus the last desktop
super + Tab
	bspc desktop -f last

# Send to desktop
super + ctrl + {1-9}
	~/scripts/bspwm/bspwm-crystal --send {1-9}

# Send and Swap to desktop
super + shift + {1-9}
	bspc node -d {1-9} --follow

# # focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# # focus the next/previous desktop in the current monitor
# super + bracket{left,right}
# 	bspc desktop -f {prev,next}.local

# # focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on


#
#=============================== Preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# # preselect the ratio
# super + ctrl + {1-9}
# 	bspc node -o 0.{1-9}

# # cancel the preselection for the focused desktop
# super + ctrl + shift + space
# 	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
#============================== Move/Resize
#

# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Move floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


# # Expand/contract a window by moving one of its side outward/inward
# super + s : {h,j,k,l}
#     STEP=20; SELECTION={1,2,3,4}; \
#     bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
#     bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

#
#============================= Media Controls
#

# Play/Stop Player
XF86AudioPlay
  playerctl play-pause

# Previous/Next Video/Music
XF86Audio{Prev,Next}
  playerctl {previous,next}

# Volume Up/Down
XF86Audio{RaiseVolume,LowerVolume}
	~/scripts/media/volume-notifier {up,down} 2

# Mute Sound
super + F1
	pactl set-sink-mute @DEFAULT_SINK@ toggle


#
#================================ ETC
#

# Reload bspwm
super + ctrl + r
	bspc wm -r

# Reload sxhkd
super + Escape
	~/scripts/killandnotify "sxhkd" "Config reloaded" && sxhkd &

# Reload polybar
super + ctrl + p
	~/scripts/polybar/reloadpolybar &

# Show sxhkd help
super + u
	~/scripts/rofi/rofi-sxhkd-help &

# Rofi man pages 
super + shift + u 
	~/scripts/rofi/rofi-man &
