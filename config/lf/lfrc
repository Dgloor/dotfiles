# ========== Basic Settings ========== #
set preview true
set drawbox true 
set info size
set icons true
set ignorecase true
#set hidden true


# ========== Custom Functions ========== #
cmd clear_trash %trash-empty
cmd j %lf -remote "send $id cd '$(autojump $1)'"
cmd setwallpaper %cp "$f" ~/.config/wall.jpg && xwallpaper --zoom "$f"

cmd trash %trash-put $fx

cmd restore_trash ${{
  trash-restore
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir -p $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd sudomkfile ${{
  printf "File Name: "
  read ans
  sudo $EDITOR $ans
}}

cmd chmod ${{
  printf "Mode Bits: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done

  lf -remote 'send reload'
}}

cmd zip %zip -r "$f" "$f"
cmd tar %tar cvf "$f.tar" "$f"
cmd targz %tar cvzf "$f.tar.gz" "$f"
cmd tarbz2 %tar cjvf "$f.tar.bz2" "$f"

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}


# ========== Key Bingings ========== #
# Remove some defaults
map m 
map w 
map n 
map "'"
map '"'
map c
map e 
map f 
map u
map x 
map y 
map p

# Open
map ee $$EDITOR "$f"

# Basic functions
map <enter> open
map . set hidden!
map yy copy
map dd cut
map mf mkfile
map msf sudomkfile
map md mkdir
map x setwallpaper
map r rename
map R reload
map C clear
map U unselect
map H top
map L bottom
map ch chmod

# Archive 
map az zip
map at tar 
map ag targz
map ab targz
map ua unarchive

# Trash 
map DD trash 
map tc clear_trash
map tr restore_trash


# ========== âš¡ Movement ========== #
map gt cd ~/.local/share/Trash/files
map gc cd ~/.config
map gs cd ~/.scripts

# autojump
map J push :j<space>
