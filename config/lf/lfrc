# ========== Basic Settings ========== #
set preview true
set drawbox true 
set info size
set icons true
set ignorecase true
#set hidden true

set previewer ~/.scripts/lf/preview


# ========== Custom Functions ========== #
cmd clear_trash %trash-empty
cmd trash %trash-put $fx

cmd setwallpaper %{{
  cp "$f" ~/.config/wall.jpg && xwallpaper --zoom "$f"
}}

cmd j %{{
  lf -remote "send $id cd '$(autojump $1)'"
}}

cmd restore_trash ${{
  trash-restore
}}

cmd open ${{
  case $(file --mime-type "$f" -bL) in
    text/*|application/json) $EDITOR "$f";;
    *) xdg-open "$f" ;;
  esac
}}

cmd mkdir %{{
  printf "Directory name: "
  read ans
  mkdir -p $ans
}}

cmd mkfile %{{
  printf "File name: "
  read ans
  touch $ans
}}

cmd sudomkfile %{{
  printf "File Name: "
  read ans
  sudo touch $ans
}}

cmd chmod %{{
  printf "Mode Bits: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done

  lf -remote 'send reload'
}}

cmd zip %{{
  IFS='/'
  read -a dirname <<< "$f"
  zip -r "${dirname[-1]}".zip ${dirname[-1]}
}}

cmd tar %tar cvf "$f.tar" "$f"
cmd targz %tar cvzf "$f.tar.gz" "$f"
cmd tarbz2 %tar cjvf "$f.tar.bz2" "$f"

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}


# ========== Key Bingings ========== #
# Remove some defaults
map m 
map w 
map n 
map "'"
map '"'
map c
map e 
map f 
map u
map x 
map y 
map p

# Open
map ee $$EDITOR "$f"

# Basic functions
map . set hidden!
map yy copy
map dd cut
map r rename
map R reload
map C clear
map U unselect
map H top
map L bottom
map ch chmod

map <enter> open
map S $$SHELL
map md mkdir
map mf mkfile
map msf sudomkfile
map x setwallpaper


# Archive 
map az zip
map at tar 
map ag targz
map ab targz
map au unarchive

# Trash 
map DD trash 
map tc clear_trash
map tr restore_trash


# ========== âš¡ Movement ========== #
map gt cd ~/.local/share/Trash/files
map gc cd ~/.config
map gs cd ~/.scripts

# autojump
map J push :j<space>
