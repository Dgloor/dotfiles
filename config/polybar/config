[colors]
background = #1E1F29
background-alt = #282A36
foreground = #F8F8F2
foreground-alt = #555
primary = #6272A4
secondary = #8BE9FD
alert = #bd2c40

[settings]
screenchange-reload = true
;format-underline = ${colors.primary}

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
monitor = ${env:MONITOR:DisplayPort-0}
fixed-center = true
wm-restack = bspwm
enable-ipc = true
bottom = false
offset-x = 0
offset-y = 0
width = 100%
height = 28
radius = 0.0
separator = "  "

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

border-size = 0
border-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = RobotoMono Nerd Font:weight=bold:pixelsize=9;
font-1 = RobotoMono Nerd Font:weight=bold:pixelsize=10;
font-2 = NotoColorEmoji:fontformat=truetype:scale=12:antialias=false;

modules-left = arch-logo bspwm
;modules-center = date
modules-right = updates cpu-temperature cpu memory pulseaudio xkeyboard date

tray-position = right
tray-padding = 3
tray-scale = 1
tray-maxsize = 15

cursor-click = pointer
cursor-scroll = default

[module/bspwm]
type = internal/bspwm
enable-scroll = false

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-underline = ${colors.background}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-underline = ${colors.background}
label-empty-padding = 1

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
label-separator = ""

[module/arch-logo]
type = custom/text
content = " "
click-left = rofi -show drun
click-right = ~/.scripts/rofi/rofi-powermenu

[module/date]
type = internal/date
interval = 1
date = %d/%m/%y
;date = %a, %b %d
time = %H:%M
date-alt = %d/%m/%y
time-alt = %H:%M:%S
label = 📅 %date%  🕓 %time% 
label-font = 1

[module/updates]
type = custom/script
exec = ~/.scripts/polybar/polyupdates
interval = 1800
format-prefix = "📦 "
# click-left = alacritty -e sudo pacman -Syu
click-left = alacritty -e paru
click-right = alacritty -e paru -Sua

[module/cpu-temperature]
type = custom/script
exec = ~/.scripts/polybar/polytempamd
label = "%output%"
format-prefix="🔥 "
interval = 5
click-left = alacritty -e btm

[module/cpu]
type = custom/script
exec = ~/.scripts/polybar/polycpu
label = "%output%"
interval = 3
format-prefix = "💻 "
click-left = alacritty -e btm

[module/memory]
type = custom/script
exec = ~/.scripts/polybar/polymemory
label = "%output%"
interval = 3
format-prefix = "🧠 "
click-left = alacritty -e btm

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = <ramp-volume> <label-volume>
label-muted = 🔇 muted
ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊
click-right = pavucontrol

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = caps lock
format = ⌨️ <label-layout>
format-spacing = 0
click-left = ~/.scripts/rofi/rofi-keyboard-layout

